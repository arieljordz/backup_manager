                            </div>
                        </div>*@
                    @*<div class="row col-12">
                            <input type="file" onchange="selectFolder(event);" webkitdirectory mozdirectory msdirectory odirectory directory multiple="multiple" />
                        </div>*@
                </div>
            </div>
            <div class="modal-footer bg-gray-light">
                <button type="button" class="btn btn-success flat" onclick="save_task()">Save</button>
                <button type="button" class="btn btn-danger flat" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

@*SETTINGS MODAL*@
<div id="mod-settings" class="modal fade" role="dialog" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header bg-success">
                <h6 class="modal-title">Settings</h6>
            </div>
            <div class="modal-body bg-success-light">
                <form id="form_settings">
                    <div class="p-2">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" name="IsDatedFolder" value="true">Auto Create Dated Folder
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" name="IsDatedSuffix" value="true">Dated Suffix
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" name="IsDefaultNetwork" value="true">Use Default Network Credential
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" name="IsScheduled" value="true">Enabled Scheduled Backup
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" name="IsDaily" value="true"> Daily Backup
                            </label>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer bg-gray-light">
                <button type="button" class="btn btn-success flat" onclick="save_settings('update')">Save</button>
                <button type="button" class="btn btn-danger flat" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


