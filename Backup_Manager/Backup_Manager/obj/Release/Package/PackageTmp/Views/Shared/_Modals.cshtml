@*ADD NEW TASK MODAL*@
<div id="mod-add-task" class="modal fade" role="dialog" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header bg-success">
                <h6 id="modaltitle" class="modal-title">Add New Backup Job</h6>
            </div>
            <div class="modal-body bg-success-light">
                <div class="p-2">
                    <div class="row">
                        <div>Output Filename</div>
                        <div class="input-group mb-3">
                            <input type="text" name="output_filename" class="form-control flat col-12" placeholder="Filename" />
                            <div class="input-group-append">
                                <span class="input-group-text flat">.zip</span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div>File Source Location</div>
                        <div class="input-group mb-3">
                            <input type="text" name="source_file" class="form-control flat col-12" placeholder="File Source Location" />
                        </div>
                    </div>
                    <div class="row">
                        <div>Backup Destination</div>
                        <div class="input-group mb-3">
                            <input type="text" name="destination" class="form-control flat col-12" placeholder="Backup Destination" />
                        </div>
                    </div>

